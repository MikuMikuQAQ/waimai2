<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatImageView
            android:id="@+id/menu_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatTextView
            android:id="@+id/menu_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:text="大白菜"
            android:textColor="#000000"
            android:textSize="18dp"
            app:layout_constraintStart_toEndOf="@+id/menu_img"
            app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatTextView
            android:id="@+id/appCompatTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="¥"
            app:layout_constraintBottom_toBottomOf="@+id/menu_img"
            app:layout_constraintStart_toEndOf="@+id/menu_img" />

    <android.support.v7.widget.AppCompatTextView
            android:id="@+id/menu_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            app:layout_constraintBottom_toBottomOf="@+id/menu_img"
            app:layout_constraintStart_toEndOf="@+id/appCompatTextView2" />

    <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/menu_img"
            app:layout_constraintEnd_toEndOf="parent">

        <android.support.v7.widget.AppCompatImageView
                android:id="@+id/menu_less"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#2166f1"
                android:src="@drawable/ic_less" />

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/menu_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:gravity="center"
                android:textSize="18dp"/>

        <android.support.v7.widget.AppCompatImageView
                android:id="@+id/menu_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#2166f1"
                android:src="@drawable/ic_add" />

    </android.support.v7.widget.LinearLayoutCompat>



</android.support.constraint.ConstraintLayout>